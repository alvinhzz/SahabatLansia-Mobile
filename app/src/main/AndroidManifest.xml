<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.xproteam.sahabatlansia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.KurusActivity"
            android:theme="@style/AppTheme.PopUpIMT"
            android:parentActivityName=".activities.IMTActivity">
        </activity>
        <activity android:name=".activities.NormalActivity"
            android:theme="@style/AppTheme.PopUpIMT"

            android:parentActivityName=".activities.IMTActivity"/>
        <activity android:name=".activities.GemukActivity"
            android:theme="@style/AppTheme.PopUpIMT"

            android:parentActivityName=".activities.IMTActivity"/>
        <activity android:name=".activities.ObesitasActivity"
            android:theme="@style/AppTheme.PopUpIMT"

            android:parentActivityName=".activities.IMTActivity"/>
        <activity
            android:name=".activities.ArtikelTipsActivity"
            android:parentActivityName=".activities.TipsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ArtikelBeritaActivity"
            android:parentActivityName=".activities.BeritaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.IMTActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TipsActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.VideoActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.BeritaActivity"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ObesitasActivity$SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>